<div class="d-flex justify-content-between flex-wrap felx-md nowrap aling-items-center pt-3 pb-2 mb-3 border-bottom">

    <h1 class="h2"> Agregar Libro</h1>

    <div class="btn-toolbar mb-2 mb-md 0">
    </div>
</div>


<div class="col py-3">

    <div class="row">
        <div class="col">
            
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                    <li class="breadcrumb-item active">Nuevo Libro</li>

                </ol>

            </nav>



        </div>
        <div class="col text-end fw-lighter">

            
        </div>


    </div>
</div>



<form action="/add" method="POST">
    <div class="row form-group mb-4">

        <!-- Campo ISBN -->
        <div class="col">
            <label for="ISBN">ISBN:</label>
            <input type="number" class="form-control" id="ISBN" name="ISBN" placeholder="Ingrese ISBN del Libro" required min="1000000000000" max="9999999999999" oninput="if(this.value.length > 13) this.value = this.value.slice(0, 13);">
        </div>

        <!-- Campo Título -->
        <div class="col">
            <label for="titulo">Título:</label>
            <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Ingrese el Título del Libro" required>
        </div>
    </div>

    <div class="row form-group mb-4">
        <!-- Campo Autor -->
        <div class="col">
            <label for="autor">Autor:</label>
            <input type="text" class="form-control" id="autor" name="autor" placeholder="Ingrese el Autor del Libro" required>
        </div>

        <!-- Campo Fecha -->
        <div class="col">
            <label for="Ano_de_publicacion" class="form-label">Año de Ano_de_publicacion: </label>
            <input type="date" class="form-control" id="Ano_de_publicacion" name="Ano_de_publicacion" required>
        </div>
    </div>

    <div class="row form-group mb-4">
        <!-- Campo Editorial -->
        <div class="col">
            <label for="editorial">Editorial:</label>
            <input type="text" class="form-control" id="editorial" name="editorial" placeholder="Ingrese la Editorial del Libro" required>
        </div>

        <!-- Campo Precio -->
        <div class="col">
            <label for="precio" class="form-label">Ingrese el precio:</label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input type="number" class="form-control" id="precio" name="precio" placeholder="0.00" min="0" step="0.01" required>
            </div>
        </div>
    </div>

    <!-- Botón de Enviar -->
    <div class="row form-group mb-4">
        <div class="col">
            <button type="submit" class="btn btn-primary">Agregar Libro</button>
        </div>
    </div>
</form>

